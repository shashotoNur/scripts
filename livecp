#!/bin/bash

# Prompt the user for the target directory
read -p "Enter the target directory path: " target_dir
mkdir -p $target_dir

echo "Ready to copy files to '$target_dir'."
echo "Press Enter on an empty prompt to exit."

# Start an infinite loop
while true; do
    read -p "Enter the path of the file to copy: " source_file

    if [ -z "$source_file" ]; then
        echo "Exiting."
        break
    fi

    if [ ! -f "$source_file" ]; then
        echo "Error: Source file does not exist. Please try again."
        continue
    fi

    cp "$source_file" "$target_dir"

    if [ $? -eq 0 ]; then
        echo "Successfully copied '$source_file' to '$target_dir'."
    else
        echo "An error occurred while copying."
    fi
done
